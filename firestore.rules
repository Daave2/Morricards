
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // --- Store-Specific Data ---
    // The core of the collaborative model. All data under a store's ID is
    // accessible to any authenticated user, assuming they have the correct
    // store ID configured in their client application.
    match /stores/{locationId}/pickingOrders/{orderId} {
      // Allow any authenticated user to read, list, create, update, or delete
      // picking orders within any store. Access is implicitly controlled by the
      // client application, which only shows data for the user's configured store.
      allow read, write: if isSignedIn();
    }

    // --- User-Specific Data (if any in the future) ---
    // This section is kept for potential future features where data must be
    // private to a specific user.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
